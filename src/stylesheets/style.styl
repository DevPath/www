header-height = 150px
page-width = 960px
body
  background #eee

  > header
    position fixed
    top 0
    width 100%
    height header-height
    background #93CC17

    .container
      width page-width
      margin 0 auto

    #logo
      font-color: #888
      font-size: 5em
      color: #444
      display inline-block
      text-shadow:#fff 0px 1px 0, #000 0 -1px 0
      margin-top: 25px

    nav
      margin-top: 75px
      float: right
      a
        margin-left: 30px
      a.current
        text-decoration underline

#main
  width page-width
  background white
  clear both
  margin header-height auto 0
